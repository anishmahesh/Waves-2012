<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/waves" >
    
    
     <TextView
        android:id="@+id/tvTitle_Todays_Events"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Today's Events"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="serif"
        android:minHeight="40dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#aa3824"
        />
    
     <LinearLayout
         android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
          >
         <TextView 
         android:id="@+id/tvTitleForTodaysEvents"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Event"
         android:minHeight="30dp"
         android:layout_weight="0.33"
         android:gravity="center"
         android:textColor="#000000"
         android:textStyle="bold"
         android:textSize="20dp"
         />
         <TextView 
         android:id="@+id/tvTitleForTodaysVenue"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Venue"
         android:minHeight="30dp"
         android:layout_weight="0.33"
         android:gravity="center"
         android:textColor="#000000"
         android:textStyle="bold"
         android:textSize="20dp"
         />
         <TextView 
         android:id="@+id/tvTitleForTodaysTime"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Time"
         android:minHeight="30dp"
         android:layout_weight="0.33"
         android:gravity="center"
         android:textColor="#000000"
         android:textStyle="bold"
         android:textSize="20dp"
         />
         
         
     </LinearLayout>
     
     "

    <ListView
        android:id="@+id/list_today_event"
        android:cacheColorHint="@android:color/transparent"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>